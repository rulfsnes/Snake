<Window x:Class="SnakeGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnakeGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Topmost="True" WindowState="Maximized">
    <Grid>
        <Grid.Background>
            <RadialGradientBrush>
                <GradientStop Color="Black" Offset="1"/>
                <GradientStop Color="#FFC78C8C" Offset="0.298"/>
            </RadialGradientBrush>
        </Grid.Background>
        <Grid x:Name="Lars" Margin="0,0,2,0" Opacity="0.5">
            <Grid.Background>
                <RadialGradientBrush>
                    <GradientStop Color="#FFF90F0F" Offset="{Binding Path=Offset,UpdateSourceTrigger=PropertyChanged}"/>
                    <GradientStop Color="#FF0031D6" Offset="0.804"/>
                </RadialGradientBrush>
            </Grid.Background>
        </Grid>

    </Grid>
</Window>
